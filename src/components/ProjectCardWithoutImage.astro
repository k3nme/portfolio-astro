---
import { cn } from '@/utils'
import Button from './Button.astro'

const {
	as: Tag = 'a',
	class: className,
	href,
	heading,
	subheading,
	techStack
} = Astro.props

---

<Tag
	class={cn(
		className,
		'flex flex-col gap-y-3 rounded-2xl border border-border bg-primary-foreground ',
		href && 'transition-all hover:border-foreground/25'
	)}
	href={href}
>
	<div class='flex flex-col gap-y-0.5 px-5 py-4'>
		<h1 class='text-base font-medium'>{heading}</h1>
		<h2 class='text-muted-foreground'>{subheading}</h2>
		<h3 class='text-muted-foreground my-2'>
			{techStack.split(',').map((tech: string) => (
					<Button as='button' title={tech} class="p-2"/>
			))}
		</h3>
	</div>

	<slot />
</Tag>
