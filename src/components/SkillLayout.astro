---
import Button from './Button.astro'
const { title, skills } = Astro.props
---

<div class='flex flex-col gap-y-2 md:flex-col md:gap-x-5 md:gap-y-0 text-muted-foreground'>
	<h3 class='w-1/5 font-medium'>{title}</h3>
	<div class='flex w-4/5 flex-row flex-wrap gap-x-2 gap-y-2 my-4'>
		{skills.map((skill: string[]) => <Button as='button' title={skill}/>)}
	</div>
</div>
